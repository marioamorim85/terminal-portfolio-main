# Environment Variables Template for Mário Amorim Terminal Portfolio
# Copy this file to .env and fill in your actual values

# GitHub Integration
# Get your GitHub personal access token from: https://github.com/settings/tokens
# Required scopes: public_repo, read:user
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_USERNAME=marioamorim85

# Analytics (Optional)
# Plausible Analytics domain (if using Plausible)
PLAUSIBLE_DOMAIN=marioamorim.com

# Umami Analytics (if using Umami)
UMAMI_WEBSITE_ID=your_umami_website_id
UMAMI_SRC=https://your-umami-instance.com/umami.js

# Google Analytics (if using GA4)
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Deployment
# Production URL
PRODUCTION_URL=https://terminal.marioamorim.com
PORTFOLIO_URL=https://portfolio.marioamorim.com

# Build Configuration
NODE_ENV=production
VITE_APP_VERSION=1.0.0
VITE_APP_NAME="Mário Amorim Terminal Portfolio"

# Contact Form (if implementing)
EMAIL_SERVICE_ID=your_emailjs_service_id
EMAIL_TEMPLATE_ID=your_emailjs_template_id
EMAIL_PUBLIC_KEY=your_emailjs_public_key

# Blog Configuration
BLOG_ENABLED=true
GITHUB_REPOS_ENABLED=true

# SEO
SITE_URL=https://terminal.marioamorim.com
SITE_NAME="Mário Amorim - Terminal Portfolio"
SITE_DESCRIPTION="Computer Engineering graduate teaching at ISTEC Porto. Full-stack development, cloud computing, and security specialist."
SITE_KEYWORDS="computer engineer, university lecturer, full-stack developer, laravel, react, n8n, cloud computing, security, portugal"
AUTHOR_NAME="Mário Filipe Encarnação Amorim"
CONTACT_EMAIL="mario@marioamorim.com"

# Social Media
TWITTER_HANDLE=@marioamorim
LINKEDIN_PROFILE=https://linkedin.com/in/marioamorim
GITHUB_PROFILE=https://github.com/marioamorim85

# Security
CSP_ENABLED=true
SECURITY_HEADERS_ENABLED=true
